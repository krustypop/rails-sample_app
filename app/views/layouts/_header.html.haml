%nav.navbar.navbar-fixed-top.navbar-dark.bg-inverse

  %a.navbar-brand#logo{:href => root_path} SAMPLE APP

  %ul.nav.navbar-nav.pull-xs-right
    %li.nav-item{:class => active_class?(root_path) }
      = link_to("Home", root_path, class: "nav-link")

    %li.nav-item{:class => active_class?(about_path) }
      = link_to("About", about_path, class: "nav-link")

    %li.nav-item{:class => active_class?(contact_path) }
      = link_to("Contact", contact_path, class: "nav-link")

    -if logged_in?
      %li.nav-item.active
        %a.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
          Hi #{current_user.name}
        .dropdown-menu.dropdown-menu-right
          = link_to "Profile", current_user, class: "dropdown-item"
          = link_to "Settings", '#', class: "dropdown-item"
          .dropdown-divider
          = button_to("Log out", logout_path, method: :delete, class: "dropdown-item")
    -else
      = link_to "Sign in", login_path, class: "btn btn-success-outline", style: "margin-left:10px;"
      = link_to "Sign up", signup_path, class: "btn btn-info-outline"
